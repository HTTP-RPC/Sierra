<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE column-panel SYSTEM "sierra.dtd">

<column-panel spacing="4" padding="8" opaque="true">
    <row-panel name="rowPanel" spacing="4">
        <button text="button1Text"/>
        <button text="button2Text"/>
        <button text="button3Text"/>
        <button text="button4Text"/>
        <button text="button5Text"/>
    </row-panel>

    <separator/>

    <row-panel spacing="4">
        <spacer weight="1"/>
        <radio-button name="leftToRightButton" group="orientation" text="leftToRight"/>
        <radio-button name="rightToLeftButton" group="orientation" text="rightToLeft"/>
        <button name="applyOrientationButton" text="applyOrientation"/>
        <spacer weight="1"/>
    </row-panel>
</column-panel>

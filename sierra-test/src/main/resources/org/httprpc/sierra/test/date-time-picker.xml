<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE column-panel SYSTEM "sierra.dtd">

<column-panel padding="8">
    <column-panel spacing="4" alignToGrid="true">
        <row-panel alignToBaseline="true">
            <label text="date" alignmentX="1.0"/>
            <date-picker name="datePicker" alignmentX="0.0"/>
        </row-panel>

        <separator/>

        <row-panel alignToBaseline="true">
            <label text="time" alignmentX="1.0"/>
            <time-picker name="timePicker" alignmentX="0.0"/>
        </row-panel>
        <row-panel alignToBaseline="true">
            <label text="minuteInterval" alignmentX="1.0"/>
            <combo-box name="minuteIntervalComboBox" alignmentX="0.0"/>
        </row-panel>
        <row-panel alignToBaseline="true">
            <spacer/>
            <check-box name="strictCheckBox" text="strict" alignmentX="0.0"/>
        </row-panel>
    </column-panel>

    <spacer weight="1"/>

    <label name="selectionLabel" horizontalAlignment="center"/>
</column-panel>

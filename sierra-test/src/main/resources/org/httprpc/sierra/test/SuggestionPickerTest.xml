<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE column-panel SYSTEM "sierra.dtd">

<column-panel padding="8" opaque="true">
    <column-panel spacing="4" alignToGrid="true">
        <row-panel alignToBaseline="true">
            <label text="Quantity" alignmentX="1.0"/>
            <spinner name="countSpinner" alignmentX="0.0"/>
        </row-panel>

        <row-panel alignToBaseline="true">
            <label text="Size" alignmentX="1.0"/>
            <suggestion-picker name="sizeSuggestionPicker" columns="10" alignmentX="0.0"/>
        </row-panel>
        <row-panel alignToBaseline="true">
            <label text="Color" alignmentX="1.0"/>
            <suggestion-picker name="colorSuggestionPicker" columns="10" maximumRowCount="4" alignmentX="0.0"/>
        </row-panel>
        <separator/>

        <row-panel>
            <spacer/>
            <button name="submitButton" text="Submit"/>
        </row-panel>
    </column-panel>

    <spacer weight="1"/>

    <label name="selectionLabel" horizontalAlignment="center"/>
</column-panel>

        <row-panel name="buttonRow">
            <toggle-button name="alignLeftButton" icon="format_align_left_black_18dp.svg" style="buttonType: borderless"/>
            <separator orientation="vertical"/>
            <toggle-button name="alignCenterButton" icon="format_align_center_black_18dp.svg" style="buttonType: borderless"/>
            <separator orientation="vertical"/>
            <toggle-button name="alignRightButton" icon="format_align_right_black_18dp.svg" style="buttonType: borderless"/>
            <separator orientation="vertical"/>
            <toggle-button name="alignJustifyButton" icon="format_align_justify_black_18dp.svg" style="buttonType: borderless"/>
        </row-panel>

        <label name="selectionLabel"/>
    </row-panel>
</column-panel>

<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE column-panel SYSTEM "sierra.dtd">

<column-panel spacing="8" padding="8">
    <row-panel spacing="8">
        <row-panel>
            <toggle-button name="alignLeftButton" icon="format_align_left_black_18dp.svg" style="buttonType: toolBarButton"/>
            <separator orientation="vertical"/>
            <toggle-button name="alignCenterButton" icon="format_align_center_black_18dp.svg" style="buttonType: toolBarButton"/>
            <separator orientation="vertical"/>
            <toggle-button name="alignRightButton" icon="format_align_right_black_18dp.svg" style="buttonType: toolBarButton"/>
            <separator orientation="vertical"/>
            <toggle-button name="alignJustifyButton" icon="format_align_justify_black_18dp.svg" style="buttonType: toolBarButton"/>
        </row-panel>

        <label name="selectionLabel"/>
    </row-panel>
</column-panel>

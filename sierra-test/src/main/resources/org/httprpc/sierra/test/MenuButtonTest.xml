<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE column-panel SYSTEM "sierra.dtd">

<column-panel padding="8" opaque="true">
    <spacer weight="1"/>

    <row-panel>
        <spacer weight="1"/>

        <row-panel spacing="8">
            <menu-button name="menuButton" text="showMenu">
                <menu-item text="item1"/>
                <menu-item text="item2"/>
                <menu-item text="item3"/>
            </menu-button>

            <check-box name="focusableCheckBox" text="focusable"/>
        </row-panel>

        <spacer weight="1"/>
    </row-panel>

    <spacer weight="1"/>
</column-panel>

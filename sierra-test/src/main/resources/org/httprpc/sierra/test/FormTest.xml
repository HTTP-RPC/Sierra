<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE column-panel SYSTEM "sierra.dtd">

<column-panel spacing="4" padding="8" alignToGrid="true" scrollableTracksViewportWidth="true" opaque="true">
    <row-panel alignToBaseline="true">
        <label text="firstName" alignmentX="1.0"/>
        <text-field columns="12" alignmentX="0.0"/>
    </row-panel>

    <row-panel alignToBaseline="true">
        <label text="lastName" alignmentX="1.0"/>
        <text-field columns="12" alignmentX="0.0"/>
    </row-panel>

    <row-panel alignToBaseline="true">
        <label text="streetAddress" alignmentX="1.0"/>
        <text-field columns="24" alignmentX="0.0"/>
    </row-panel>

    <row-panel alignToBaseline="true">
        <label text="city" alignmentX="1.0"/>
        <text-field columns="16" alignmentX="0.0"/>
    </row-panel>

    <row-panel alignToBaseline="true">
        <label text="state" alignmentX="1.0"/>
        <text-field columns="12" alignmentX="0.0"/>
    </row-panel>

    <row-panel alignToBaseline="true">
        <label text="postalCode" alignmentX="1.0"/>
        <text-field columns="8" alignmentX="0.0"/>
    </row-panel>

    <separator/>

    <row-panel alignToBaseline="true">
        <label text="username" alignmentX="1.0"/>
        <text-field columns="8" alignmentX="0.0"/>
    </row-panel>

    <row-panel alignToBaseline="true">
        <label text="password" alignmentX="1.0"/>
        <password-field columns="8" alignmentX="0.0"/>
    </row-panel>

    <separator/>

    <row-panel alignToBaseline="true">
        <label text="emailAddress" alignmentX="1.0"/>
        <text-field columns="16" alignmentX="0.0"/>
    </row-panel>

    <row-panel alignToBaseline="true">
        <label text="homePhone" alignmentX="1.0"/>
        <text-field columns="12" alignmentX="0.0"/>
    </row-panel>

    <row-panel alignToBaseline="true">
        <label text="mobilePhone" alignmentX="1.0"/>
        <text-field columns="12" alignmentX="0.0"/>
    </row-panel>

    <row-panel alignToBaseline="true">
        <label text="fax" alignmentX="1.0"/>
        <text-field columns="12" alignmentX="0.0"/>
    </row-panel>

    <separator/>

    <row-panel alignToBaseline="true">
        <label text="field1" alignmentX="1.0"/>
        <formatted-text-field name="formattedTextField1" columns="12" focusLostBehavior="commit" alignmentX="0.0"/>
    </row-panel>

    <row-panel alignToBaseline="true">
        <label text="field2" alignmentX="1.0"/>
        <formatted-text-field name="formattedTextField2" columns="12" focusLostBehavior="commit-or-revert" alignmentX="0.0"/>
    </row-panel>

    <row-panel alignToBaseline="true">
        <label text="field3" alignmentX="1.0"/>
        <formatted-text-field name="formattedTextField3" columns="12" focusLostBehavior="revert" alignmentX="0.0"/>
    </row-panel>

    <row-panel alignToBaseline="true">
        <label text="field4" alignmentX="1.0"/>
        <formatted-text-field name="formattedTextField4" columns="12" focusLostBehavior="persist" alignmentX="0.0"/>
    </row-panel>

    <separator/>

    <row-panel>
        <label text="notes" alignmentX="1.0" alignmentY="0.0"/>

        <scroll-pane>
            <text-area rows="4" columns="20" tabSize="2"/>
        </scroll-pane>
    </row-panel>
</column-panel>

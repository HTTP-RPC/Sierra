<?xml version="1.0" encoding="utf-8"?>

<column-panel spacing="8" padding="8">
    <row-panel spacing="8">
        <row-panel spacing="4">
            <label text="ticker"/>
            <text-field name="tickerTextField" columns="8"/>
        </row-panel>

        <row-panel spacing="4">
            <label text="count"/>
            <text-field name="countTextField" columns="4"/>
        </row-panel>

        <activity-indicator name="activityIndicator" indicatorSize="18"/>

        <spacer weight="1"/>

        <button name="submitButton" text="submit"/>
    </row-panel>

    <separator/>

    <row-panel spacing="8" weight="1">
        <column-panel spacing="4" alignToGrid="true">
            <row-panel>
                <label text="name" alignmentX="1.0"/>
                <row-panel>
                    <text-field name="nameTextField" columns="12" editable="false"/>
                </row-panel>
            </row-panel>
            <row-panel>
                <label text="exchangeCode" alignmentX="1.0"/>
                <row-panel>
                    <text-field name="exchangeCodeTextField" columns="6" editable="false"/>
                </row-panel>
            </row-panel>
            <row-panel>
                <label text="description" alignmentX="1.0" alignmentY="0.0"/>
                <scroll-pane>
                    <text-area name="descriptionTextArea" rows="6" columns="16" editable="false"/>
                </scroll-pane>
            </row-panel>
            <row-panel>
                <label text="startDate" alignmentX="1.0"/>
                <row-panel>
                    <text-field name="startDateTextField" columns="8" editable="false"/>
                </row-panel>
            </row-panel>
            <row-panel>
                <label text="endDate" alignmentX="1.0"/>
                <row-panel>
                    <text-field name="endDateTextField" columns="8" editable="false"/>
                </row-panel>
            </row-panel>
        </column-panel>

        <separator orientation="vertical"/>

        <scroll-pane size="360" weight="1">
            <table name="assetPricingTable"/>
        </scroll-pane>
    </row-panel>
</column-panel>

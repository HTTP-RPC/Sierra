<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE column-panel SYSTEM "sierra.dtd">

<column-panel spacing="4" alignToGrid="true" padding="8">
    <row-panel alignToBaseline="true">
        <label text="Quantity" alignmentX="1.0"/>
        <text-field columns="6" alignmentX="0.0"/>
    </row-panel>
    <row-panel alignToBaseline="true">
        <label text="Size" alignmentX="1.0"/>
        <suggestion-picker name="sizeSuggestionPicker" columns="10" alignmentX="0.0"/>
    </row-panel>
    <row-panel alignToBaseline="true">
        <label text="Color" alignmentX="1.0"/>
        <suggestion-picker name="colorSuggestionPicker" columns="10" maximumRowCount="4" alignmentX="0.0"/>
    </row-panel>
    <spacer weight="1"/>
</column-panel>
